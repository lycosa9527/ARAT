# ============================================================================
# WordBridge Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=9527
DEBUG=True
EXTERNAL_HOST=localhost

# ============================================================================
# LLM Configuration - Dashscope (阿里云)
# ============================================================================
# Get your API key from: https://dashscope.console.aliyun.com/
QWEN_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
QWEN_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions

# Model Selection
QWEN_MODEL_CLASSIFICATION=qwen-turbo
QWEN_MODEL_GENERATION=qwen-plus
DEEPSEEK_MODEL=deepseek-v3.1
KIMI_MODEL=Moonshot-Kimi-K2-Instruct

# ============================================================================
# Tencent Hunyuan Configuration
# ============================================================================
# Get your API key from: https://console.cloud.tencent.com/cam/capi
HUNYUAN_API_KEY=your_hunyuan_api_key_here
HUNYUAN_SECRET_ID=your_hunyuan_secret_id_here
HUNYUAN_API_URL=https://api.hunyuan.cloud.tencent.com/v1
HUNYUAN_MODEL=hunyuan-turbo

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///./wordbridge.db

# ============================================================================
# Security & Authentication
# ============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
VERBOSE_LOGGING=False

# ============================================================================
# Game Settings
# ============================================================================
# Time limit for each puzzle (seconds)
GAME_TIME_LIMIT=30

# Hint costs (points deducted)
HINT_COST_LEVEL1=10
HINT_COST_LEVEL2=20
HINT_COST_LEVEL3=30

# Scoring multipliers
SCORE_EASY=10
SCORE_MEDIUM=20
SCORE_HARD=30
MAX_STREAK_MULTIPLIER=3.0

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================
DASHSCOPE_QPM_LIMIT=200
DASHSCOPE_CONCURRENT_LIMIT=50
DASHSCOPE_RATE_LIMITING_ENABLED=true

# ============================================================================
# Feature Flags (Development)
# ============================================================================
FEATURE_MULTI_LLM=True
FEATURE_VOICE_INPUT=False
FEATURE_DAILY_CHALLENGE=False

